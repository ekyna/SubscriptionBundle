<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
        xmlns="http://symfony.com/schema/dic/constraint-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                            http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <class name="Ekyna\Bundle\SubscriptionBundle\Entity\Plan">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>product</value>
            </option>
            <!--<option name="message">ekyna_subscription.plan.duplicate</option>-->
        </constraint>
        <property name="designation">
            <constraint name="NotBlank"/>
        </property>
        <property name="product">
            <constraint name="NotNull"/>
        </property>
    </class>

    <class name="Ekyna\Bundle\SubscriptionBundle\Entity\Subscription">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>plan</value>
                <value>customer</value>
            </option>
            <!--<option name="message">ekyna_subscription.subscription.duplicate</option>-->
        </constraint>
        <property name="plan">
            <constraint name="NotNull" />
        </property>
        <property name="customer">
            <constraint name="NotNull" />
        </property>
    </class>

    <class name="Ekyna\Bundle\SubscriptionBundle\Entity\Renewal">
        <constraint name="Symfony\Bridge\Doctrine\Validator\Constraints\UniqueEntity">
            <option name="fields">
                <value>orderItem</value>
            </option>
            <!--<option name="message">ekyna_subscription.renewal.duplicate</option>-->
        </constraint>
        <property name="subscription">
            <constraint name="NotNull" />
        </property>
        <property name="startsAt">
            <constraint name="NotNull" />
        </property>
        <property name="endsAt">
            <constraint name="NotNull" />
        </property>
        <property name="count">
            <constraint name="GreaterThan">0</constraint>
        </property>
    </class>

</constraint-mapping>
