<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <mapped-superclass
            name="Ekyna\Bundle\SubscriptionBundle\Entity\Subscription"
            table="subscription_subscription">

        <unique-constraints>
            <unique-constraint columns="plan_id,customer_id" name="unique_subscription_subscription"/>
        </unique-constraints>

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="state" column="state" type="string" length="16"/>
        <field name="description" column="description" type="text" nullable="true"/>
        <field name="autoNotify" column="auto_notify" type="boolean" nullable="false">
            <options>
                <option name="default">1</option>
            </options>
        </field>
        <field name="expiresAt" column="expiresAt" type="date" nullable="true"/>

        <field name="createdAt" column="created_at" type="datetime">
            <gedmo:timestampable on="create" />
        </field>
        <field name="updatedAt" column="updated_at" type="datetime" nullable="true">
            <gedmo:timestampable on="update" />
        </field>

        <many-to-one target-entity="Ekyna\Bundle\SubscriptionBundle\Model\PlanInterface"
                     field="plan">
            <join-column name="plan_id" referenced-column-name="id" on-delete="RESTRICT" nullable="false"/>
        </many-to-one>

        <many-to-one target-entity="Ekyna\Component\Commerce\Customer\Model\CustomerInterface"
                     field="customer">
            <join-column name="customer_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

        <one-to-many target-entity="Ekyna\Bundle\SubscriptionBundle\Entity\Renewal"
                     field="renewals" mapped-by="subscription">
            <order-by>
                <order-by-field name="startsAt" direction="ASC"/>
                <order-by-field name="endsAt" direction="ASC"/>
                <order-by-field name="id" direction="ASC"/>
            </order-by>
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-many>

    </mapped-superclass>

</doctrine-mapping>
