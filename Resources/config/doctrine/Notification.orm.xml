<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                            http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Ekyna\Bundle\SubscriptionBundle\Entity\Notification"
            table="subscription_notification">

        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="notifiedAt" column="notified_at" type="datetime" nullable="true"/>

        <many-to-one target-entity="Ekyna\Bundle\SubscriptionBundle\Model\ReminderInterface"
                     field="reminder">
            <join-column name="reminder_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

        <many-to-one target-entity="Ekyna\Bundle\SubscriptionBundle\Model\RenewalInterface"
                     field="renewal" inversed-by="notifications">
            <join-column name="renewal_id" referenced-column-name="id" on-delete="CASCADE" nullable="false"/>
        </many-to-one>

    </entity>

</doctrine-mapping>
