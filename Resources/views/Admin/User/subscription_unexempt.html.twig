{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
    <h1>{{ 'ekyna_subscription.subscription.header.unexempt'|trans({'%year%': subscription.price.pricing.year})|raw }}</h1>
{% endblock title %}

{% block actions %}
    {{ admin_resource_btn(user, 'list') }}
    {{ admin_resource_btn(user, 'new') }}
{% endblock actions %}

{% block main %}
    <form action="{{ path('ekyna_user_user_admin_subscription_unexempt', {'userId': user.id, 'subscriptionId': subscription.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        <div class="form-body">
            {{ bootstrap_set_style('horizontal') }}
            {{ bootstrap_set_col_size('md') }}

            {{ form_widget(form) }}
        </div>
    </form>
{% endblock main %}