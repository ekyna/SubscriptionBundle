{% extends "EkynaAdminBundle:Entity:sided.html.twig" %}

{% block title %}
    <h1>{{ 'ekyna_subscription.pricing.header.generate_notify'|trans|raw }}</h1>
{% endblock title %}

{% block actions %}
    {{ admin_resource_btn('ekyna_subscription.pricing', 'list') }}
    {{ admin_resource_btn('ekyna_subscription.pricing', 'new') }}
{% endblock actions %}

{% block main %}
    <form action="{{ path('ekyna_subscription_pricing_admin_generate_notify') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
        <div class="form-body">
            {{ bootstrap_set_style('horizontal') }}

            {{ form_widget(form) }}
        </div>
        {{ ui_form_footer(form) }}
    </form>
{% endblock main %}